<p id="notice"><%= notice %></p>

<h1>Boxes</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Box</th>
      <th>Contents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td><%= box.box %></td>
        <td><%= box.contents %></td>
        <td><%= link_to 'Show', box , class:"btn btn-sm btn-info" %></td>
        <td><%= link_to 'Edit', edit_box_path(box) , class:"btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Destroy', box, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Box', new_box_path , class:"btn btn-lg btn-success" %>
